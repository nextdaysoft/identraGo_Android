<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/visitor_LL"
    tools:context=".Fragment.VisitorFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/textUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="REINGRESO"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/cross_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/cross"
            android:tint="@color/black" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <EditText
        android:id="@+id/fullName_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/pre_reg_drawble"
        android:hint="NOMBRE"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/lastName_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/pre_reg_drawble"
        android:hint="APELLIDO"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="14sp" />


    <EditText
        android:id="@+id/reasonFor_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/pre_reg_drawble"
        android:hint="MOTIVO DE VISITA  (OPCIONAL)"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="14sp" />


    <EditText
        android:id="@+id/visitDateET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/pre_reg_drawble"
        android:hint="FECHA DE LA VISITA"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="14sp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/pre_reg_drawble"
        android:hint="MOTIVE VISITA"
        android:visibility="gone"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="16sp" />


        <EditText
            android:id="@+id/Comment_ET"
            android:layout_width="match_parent"
            android:layout_height="107dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/pre_reg_drawble"
            android:gravity="start"
            android:hint="COMENTARIOS ADICIONALES  (OPCIONAL)"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        <Button
            android:id="@+id/completeRegBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/purple_500"
            android:text="COMPLETAR REGISTRO" />

        </LinearLayout>

        <!--<com.google.android.material.switchmaterial.SwitchMaterial
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:checked="true"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/baseline_lock_24"
            android:theme="@style/SCBSwitch" />-->

        <ImageView
            android:id="@+id/swOnOff"
            android:layout_width="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:src="@drawable/like_button"
            android:layout_marginEnd="30dp"
            android:layout_height="40dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/QR_Image"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_height="200dp"/>

</LinearLayout>
    </ScrollView>

</LinearLayout>
